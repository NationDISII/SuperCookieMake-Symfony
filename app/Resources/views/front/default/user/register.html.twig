{% extends 'front/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="jumbotron">
        <h1>Register</h1>
    </div>

    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}
        <input type="submit" value="Create User" class="btn btn-default pull-right" />
    {{ form_end(form) }}

{% endblock %}